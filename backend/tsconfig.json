{
	"compilerOptions": {
		"target": "ES2020",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"outDir": "dist",
		"rootDir": ".",
		"allowImportingTsExtensions": true,
		"noEmit": true
	},
	"include": ["./**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
